- content_for(:title) { 'Playlists' }
.card
  table.table.mb-0.table-hover
    thead
      th Name
      th Media Count
      th Last Updated
    tbody
      - @playlists.each do |playlist|
        tr
          td = link_to playlist.name, playlist_path(playlist)
          td = playlist.media_files.count
          td = playlist.updated_at.strftime('%d %b %Y - %H:%M')
a.btn.btn-primary.lift.mt-2 href=new_playlist_path Add Playlist
